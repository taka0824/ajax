  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= render "users/sidebar", user: current_user, book: @book %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <div>
          <table class="table table-hover">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Option</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format:'jpeg',fallback:"no_image.jpg",size:"50x50" %>
                  <% end %>
                </td>
                <td><%= link_to "#{book.title}", book_path(book.id) %></td>
                <td><%= book.body %></td>
                <td class="favorite_buttons_<%= book.id %>">
                  <%= render 'books/favorite-button', book: book %>
                </td>
                <td>コメント数:<%= book.post_comments.count %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>